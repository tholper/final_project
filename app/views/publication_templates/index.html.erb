<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All publications
    </h1>

    <a href="/publications/new" class="btn btn-block btn-outline-secondary">
      Add a new publication
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Publication
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @publications.each do |publication| %>
      <tr>
        <!-- Display publication.id start -->
        <td>
          <%= publication.id %>
        </td>
        <!-- Display publication.id end -->

        <!-- Display publication.publication_id start -->
        <td>
          <%= publication.publication.email %>
        </td>
        <!-- Display publication.publication_id end -->

        <!-- Display publication.created_at start -->
        <td>
          <%= time_ago_in_words(publication.created_at) %> ago
        </td>
        <!-- Display publication.created_at end -->

        <!-- Display publication.updated_at start -->
        <td>
          <%= time_ago_in_words(publication.updated_at) %> ago
        </td>
        <!-- Display publication.updated_at end -->

        <td>
          <a href="/publications/<%= publication.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @publications, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
