<!-- Validation failure messages -->
<% if @publication.present? %>
  <% if @publication.errors.any? %>
    <% @publication.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new publication
</h1>


<hr>

<!-- Form publication start -->
<form action="/create_publication" method="post">
<!-- Form publication end -->

  <!-- Label and input for publication_id start -->
  <div class="form-group">
    <label for="publication_id">
      Publication
    </label>

    <!-- Input for publication_id start -->
    <input type="text" id="publication_id" name="publication_id" class="form-control" value="<%= @publication.publication_id %>">
    <!-- Input for publication_id end -->
  </div>
  <!-- Label and input for publication_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create publication
  </button>
</form>

<hr>

<a href="/publications">
  Go back
</a>
